<resources>



    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="AppTheme.Transitions">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowEnterTransition">@transition/explode</item>

        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>

    <style name="AppTheme.Transitions.Collapsing">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">@dimen/title_business_detail_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewLine">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="AppBarStyleBusinessDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appbar_business_detail_height</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CollapsingStyleBusinessDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="statusBarScrim">?attr/colorPrimaryDark</item>
        <item name="expandedTitleTextAppearance">@style/CollapsingToolbarLayoutExpandedTextStyle
        </item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|snap</item>
    </style>

    <style name="TitleStyleBusinessDetail">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_business_detail_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContainerStyleBusinessDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="HeaderStyleBusinessDetail">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="NameStyleRestaurantItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionStyleRestaurantItem">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="SearchStyleEditText">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/search_edit_text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/search_edit_text_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/search_edit_text_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/search_edit_text_vertical_padding</item>
        <item name="android:textSize">@dimen/search_edit_text_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>